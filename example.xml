<?xml version="1.0" encoding="UTF-8"?>
<document xmlns="print_template">
    <text value="${date}" align="left"/>
    <block test="!isNull(keys.order_remark)">
        <text value="-" repeat="fill"/>
        <text value="备注: ${keys.order_remark}" size="w2h2"/>
    </block>

    <text value="-" repeat="fill"/>
    <text value="${keys.title}" align="center" size="w2h2"/>
    <text value="${keys.pay_name}" align="center" size="w1h2"/>
    <text value="订 单 号: ${keys.order_code}" marginTop="1"/>
    <text value="下单时间: ${keys.ctime}"/>
    <section>
        <text value="餐具数量:"/>
        <text value="${keys.guests}" size="w1h2"/>
        <text value="份"/>
    </section>
    <text value="-" repeat="fill"/>
    <table>
        <tr list="goods" item="item" size="w1h2">
            <td value="#{item.name}" weight="4"/>
            <td value="X#{item.num}" weight="2" align="right"/>
            <td value="#{item.amount}" weight="2" align="right"/>
        </tr>
    </table>
    <section>
        <text value="-" repeat="auto"/>
        <text value="其它"/>
        <text value="-" repeat="auto"/>
    </section>
    <block list="attach" item="item" test="!isEmpty(attach)">
        <text value="#{item.name} : #{amount}"/>
        <section>
            <text value="#{item.name}"/>
            <text value="-" repeat="auto"/>
            <text value="#{item.amount}"/>
        </section>
    </block>
    <text value="-" repeat="fill"/>
    <text value="总计: ￥#{keys.sum_value}" align="right" size="w1h2"/>
    <text value="-" repeat="fill"/>
    <text value="#{keys.receiver_name}  #{keys.receiver_mobile}" size="w1h2"/>
    <text value="#{keys.delivery_address}" size="w1h2"/>
</document>